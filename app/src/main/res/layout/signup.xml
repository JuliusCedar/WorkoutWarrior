<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Email"></TextView>

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Character Name"></TextView>

        <EditText
            android:id="@+id/name_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/class_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Select A Class:"></TextView>
        <RadioGroup
            android:id="@+id/class_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Knight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Knight" >
            </RadioButton>
            <RadioButton
                android:id="@+id/mage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mage" >
            </RadioButton>
            <RadioButton
                android:id="@+id/archer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archer" >
            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Enter Password"></TextView>

        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/password_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Enter Password Again"></TextView>

        <EditText
            android:id="@+id/password_login_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signup_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/blue_grey"
            android:onClick="signup"
            android:text="Sign up" />

        <TextView
            android:id="@+id/passwords_no_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passwords do not match"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textColor="#FF0000" >
        </TextView>
        <TextView
            android:id="@+id/no_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Fill In All Fields"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textColor="#FF0000" >
        </TextView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>